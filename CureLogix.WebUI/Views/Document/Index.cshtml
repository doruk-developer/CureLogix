@model List<string>
@{
    ViewData["Title"] = "Doküman Yönetimi";
}

<!-- 1. OFFLINE DROPZONE CSS -->
<link rel="stylesheet" href="~/lib/dropzone/dropzone.min.css" type="text/css" />

<style>
    .dropzone {
        border: 2px dashed #007bff;
        border-radius: 5px;
        background: #f4f6f9;
        min-height: 150px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .dropzone .dz-message {
            font-weight: bold;
            color: #495057;
        }

    .table-fixed-head thead th {
        position: sticky;
        top: 0;
        background-color: #343a40;
        color: white;
        z-index: 1;
        vertical-align: middle;
    }

    .table-responsive {
        max-height: 500px;
        overflow-y: auto;
    }
</style>

<div class="content-header"><div class="container-fluid"><h1>📁 Dijital Doküman Arşivi</h1></div></div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary card-outline">
                    <div class="card-header"><h3 class="card-title"><i class="fas fa-cloud-upload-alt"></i> Dosya Yükle</h3></div>
                    <div class="card-body">
                        <form action="/Document/Upload" class="dropzone" id="myDropzone">
                            <div class="dz-message" data-dz-message>
                                <span>Dosyaları buraya sürükleyin veya tıklayın</span><br><small class="text-muted">(PDF, JPG, PNG)</small>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-md-12 mt-3">
                <div class="card">
                    <div class="card-header bg-dark d-flex justify-content-between align-items-center">
                        <h3 class="card-title">Yüklü Dosyalar</h3>
                        <div class="custom-control custom-switch">
                            <input type="checkbox" class="custom-control-input" id="toggleGuid">
                            <label class="custom-control-label text-white" for="toggleGuid">Sistem Kodlarını Göster</label>
                        </div>
                    </div>
                    <div class="card-body p-0 table-responsive">
                        <table class="table table-striped table-hover table-fixed-head mb-0">
                            <thead><tr><th>Dosya Adı</th><th style="width: 150px">İşlem</th></tr></thead>
                            <tbody>
                                @if (Model.Count > 0)
                                {
                                    @foreach (var file in Model)
                                    {
                                        var shortName = file.Contains("_") ? file.Substring(file.IndexOf('_') + 1) : file;
                                        <tr>
                                            <td>
                                                <i class="fas fa-file-alt mr-2 text-secondary"></i>
                                                <span class="file-name-text" data-full="@file" data-short="@shortName">@shortName</span>
                                            </td>
                                            <td>
                                                <a href="~/uploads/documents/@file" target="_blank" class="btn btn-xs btn-info"><i class="fas fa-eye"></i></a>
                                                <a href="/Document/Delete?fileName=@file" class="btn btn-xs btn-danger" onclick="return confirm('Silmek istiyor musunuz?')"><i class="fas fa-trash"></i></a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr><td colspan="2" class="text-center text-muted p-4">Henüz dosya yüklenmedi.</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- 2. OFFLINE DROPZONE JS -->
<script src="~/lib/dropzone/dropzone.min.js"></script>

<script>
    Dropzone.options.myDropzone = {
        paramName: "file", maxFilesize: 5, acceptedFiles: ".jpeg,.jpg,.png,.pdf",
        dictDefaultMessage: "Yüklemek için sürükleyin",
        queuecomplete: function () { setTimeout(function() { location.reload(); }, 1000); }
    };

    document.getElementById('toggleGuid').addEventListener('change', function() {
        var isChecked = this.checked;
        document.querySelectorAll('.file-name-text').forEach(function(span) {
            span.innerText = isChecked ? span.getAttribute('data-full') : span.getAttribute('data-short');
            isChecked ? span.classList.add('text-muted', 'small') : span.classList.remove('text-muted', 'small');
        });
    });
</script>