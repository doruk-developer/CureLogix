@{
    ViewData["Title"] = "Raporlama Merkezi";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1><i class="fas fa-file-invoice-dollar"></i> Akıllı Raporlama Merkezi</h1>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">

        <div class="row">
            <!-- SOL KOLON: EXCEL & WORD RAPORLARI -->
            <div class="col-md-7">
                <div class="card card-success card-outline">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-file-excel"></i> Operasyonel Raporlar</h3>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Rapor Adı</th>
                                    <th>Açıklama</th>
                                    <th style="width: 200px;" class="text-right">Format</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- RAPOR 1 -->
                                <tr>
                                    <td><strong>Haftalık Tüketim</strong></td>
                                    <td><small class="text-muted">Onaylanan talepler ve stok çıkış hareketleri.</small></td>
                                    <td class="text-right">
                                        <!-- Sadece Excel Butonu Kaldı -->
                                        <a href="/Report/ExportExcel_Consumption" class="btn btn-success btn-sm" title="Excel İndir">
                                            <i class="fas fa-file-excel"></i> .xlsx
                                        </a>
                                    </td>
                                </tr>

                                <!-- RAPOR 2 (Gelecek Özellik) -->
                                <tr>
                                    <td><strong>Yıllık Envanter Sayımı</strong></td>
                                    <td><small class="text-muted">Tüm hastane ve merkez depo varlıkları.</small></td>
                                    <td class="text-right">
                                        <span class="badge badge-secondary">Hazırlanıyor...</span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- SAĞ KOLON: PDF / RESMİ EVRAKLAR -->
            <div class="col-md-5">
                <div class="card card-danger card-outline">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-file-pdf"></i> Resmi Tutanaklar</h3>
                    </div>
                    <div class="card-body text-center">
                        <p class="text-muted">Resmi kurumlar için ıslak imzaya uygun formatlar.</p>

                        <div class="alert alert-info text-left small">
                            <i class="fas fa-info-circle"></i> İpucu: PDF çıktıları için tarayıcınızın <strong>"Yazdır (Ctrl+P) > PDF Olarak Kaydet"</strong> özelliğini kullanmanız önerilir.
                        </div>

                        <div class="mt-4">
                            <!-- SOL BUTON (Sevkiyat) -->
                            <a href="/Supply/Index" class="btn btn-app bg-danger" target="_blank">
                                <i class="fas fa-truck-loading"></i> Sevkiyat Listesi
                            </a>

                            <!-- SAĞ BUTON (İmha) - DÜZELTİLDİ -->
                            <!-- bg-dark: Siyah Zemin -->
                            <!-- text-danger: Kırmızı Yazı ve İkon -->
                            <a href="/Waste/Index" class="btn btn-app bg-dark text-danger font-weight-bold" target="_blank">
                                <i class="fas fa-biohazard"></i> İmha Tutanakları
                            </a>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
</section>