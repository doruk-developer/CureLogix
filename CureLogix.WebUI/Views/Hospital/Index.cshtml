@using CureLogix.Entity.DTOs.HospitalDTOs
@model List<HospitalListDto>

@{
    ViewData["Title"] = "Hastaneler Listesi";
}

<!-- Başlık ve Ekleme Butonu -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">🏥 Hastane Yönetimi</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Home/Index">Dashboard</a></li>
                    <li class="breadcrumb-item active">Hastaneler</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Tablo Alanı -->
<section class="content">
    <div class="container-fluid">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">Kayıtlı Sağlık Kurumları</h3>

                <div class="card-tools">
                    @if (User.IsInRole("Admin"))
                    {
                        <a href="/Hospital/Add" class="btn btn-primary btn-sm">
                            <i class="fas fa-plus"></i> Yeni Hastane Ekle
                        </a>
                    }
                </div>

            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap w-100">
                    <thead>
                        <tr>
                            <th style="width: 5%">#</th>
                            <th>Hastane Adı</th>
                            <th>Şehir</th>
                            <th>Depo Kapasitesi</th>

                            @* DİNAMİK KOLON: SADECE ADMIN GÖRÜR *@
                            @if (User.IsInRole("Admin"))
                            {
                                <th style="width: 15%">İşlemler</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td><span class="font-weight-bold">@item.Name</span></td>
                                <td><span class="badge badge-info">@item.City</span></td>
                                <td>@item.MainStorageCapacity <small>birim</small></td>

                                @* DİNAMİK HÜCRE: SADECE ADMIN GÖRÜR *@
                                @if (User.IsInRole("Admin"))
                                {
                                    <td>
                                        <div class="d-flex gap-2">
                                            <a href="/Hospital/Update/@item.Id" class="btn btn-sm btn-outline-info">Düzenle</a>
                                            <a href="/Hospital/Delete/@item.Id" class="btn btn-sm btn-outline-danger" onclick="return confirm('@item.Name hastanesini silmek istediğinize emin misiniz?');">Sil</a>
                                        </div>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</section>