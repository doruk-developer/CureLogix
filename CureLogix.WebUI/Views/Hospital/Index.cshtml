@using CureLogix.Entity.DTOs.HospitalDTOs
@model List<HospitalListDto>

@{
    ViewData["Title"] = "Hastaneler Listesi";
}

<!-- Başlık ve Ekleme Butonu -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">🏥 Hastane Yönetimi</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Home/Index">Dashboard</a></li>
                    <li class="breadcrumb-item active">Hastaneler</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Tablo Alanı -->
<section class="content">
    <div class="container-fluid">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">Kayıtlı Sağlık Kurumları</h3>
                <div class="card-tools">
                    @if (User.IsInRole("Admin"))
                    {
                        <a href="/Hospital/Add" class="btn btn-primary btn-sm shadow-sm">
                            <i class="fas fa-plus"></i> Yeni Hastane Ekle
                        </a>
                    }
                </div>
            </div>

            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap w-100">
                    <thead>
                        <tr>
                            <th style="width: 5%">#</th>
                            <th>Hastane Adı</th>
                            <th>Şehir</th>
                            <th>Depo Kapasitesi</th>
                            @if (User.IsInRole("Admin"))
                            {
                                <th style="width: 15%">İşlemler</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count > 0)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td><span class="font-weight-bold">@item.Name</span></td>
                                    <td><span class="badge badge-info">@item.City</span></td>
                                    <td>@item.MainStorageCapacity <small>birim</small></td>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <td>
                                            <div class="d-flex gap-2">
                                                <a href="/Hospital/Update/@item.Id" class="btn btn-sm btn-outline-info"><i class="fas fa-pencil-alt"></i> Düzenle</a>
                                                <a href="/Hospital/Delete/@item.Id" class="btn btn-sm btn-outline-danger" onclick="return confirm('Silinsin mi?');"><i class="fas fa-trash"></i> Sil</a>
                                            </div>
                                        </td>
                                    }
                                </tr>
                            }
                        }
                        else
                        {
                            <!-- ✅ PROFESYONEL BOŞ SATIR (EMPTY STATE ROW) -->
                            <tr>
                                <td colspan="@(User.IsInRole("Admin") ? 5 : 4)" class="text-center py-5">
                                    <div class="empty-state">
                                        <i class="fas fa-hospital-alt fa-4x text-muted mb-3 opacity-25"></i>
                                        <h5 class="text-muted">Kayıtlı Hastane Bulunamadı</h5>
                                        <p class="small text-secondary">Lojistik verilerini takip etmek için lütfen yeni bir hastane kaydı ekleyin.</p>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>