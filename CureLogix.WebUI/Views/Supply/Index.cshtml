@using CureLogix.Entity.Concrete
@model List<SupplyRequest>
@{
    ViewData["Title"] = "Lojistik Merkezi";
}

<div class="content-header"><div class="container-fluid"><h1>🚚 Sevkiyat Yönetimi</h1></div></div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger font-weight-bold"><i class="fas fa-exclamation-triangle"></i> @TempData["Error"]</div>
}

<section class="content">
    <div class="card card-teal card-outline">
        <div class="card-header text-right">
            <a href="/Supply/Create" class="btn btn-teal"><i class="fas fa-plus"></i> Yeni Talep</a>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover">
                <thead><tr><th>Tarih</th><th>İlaç ID</th><th>Miktar</th><th>İşlem</th></tr></thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.RequestDate?.ToShortDateString()</td>
                            <td>@item.MedicineId</td>
                            <td class="font-weight-bold">@item.RequestQuantity</td>
                            <td>
                                <!-- DÜZELTME 1: data-bs-toggle ve data-bs-target eklendi -->
                                <button type="button" class="btn btn-success btn-sm"
                                        data-bs-toggle="modal" data-bs-target="#vehicleModal"
                                        onclick="setTransferId(@item.Id)">
                                    <i class="fas fa-truck-loading"></i> Araç Ata & Gönder
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

<!-- ARAÇ SEÇİM MODALI -->
<div class="modal fade" id="vehicleModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-teal">
                <h5 class="modal-title">🚛 Sevkiyat Aracı Seçimi</h5>
                <!-- DÜZELTME 2: Kapatma butonu için data-bs-dismiss -->
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/Supply/Approve" method="post">
                <div class="modal-body">
                    <!-- Javascript buraya ID yazacak -->
                    <input type="hidden" name="id" id="modalRequestId" />

                    <div class="form-group">
                        <label>Müsait Araçlar</label>
                        <select name="vehicleId" class="form-control">
                            <option value="1">34 CRM 101 - Standart (Soğutucu YOK)</option>
                            <option value="2">06 LOJ 99 - Frigorifik (❄️ Soğutuculu)</option>
                            <option value="3">35 EGE 35 - Frigorifik (❄️ Soğutuculu)</option>
                        </select>
                    </div>
                    <div class="alert alert-info small mt-2">
                        <i class="fas fa-info-circle"></i> Dikkat: Seçilen ilaç <strong>Soğuk Zincir</strong> gerektiriyorsa, standart araç seçimi sistem tarafından engellenecektir.
                    </div>
                </div>
                <div class="modal-footer">
                    <!-- DÜZELTME 3: İptal butonu -->
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-success">Onayla</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function setTransferId(id) {
        // Tıklanan satırın ID'sini modal içindeki gizli inputa yazar
        document.getElementById('modalRequestId').value = id;
    }
</script>