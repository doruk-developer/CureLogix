@using CureLogix.Entity.DTOs.MedicineDTOs
@model List<MedicineListDto>

@{
    ViewData["Title"] = "İlaç Envanteri";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">💊 İlaç & Medikal Malzeme</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Home/Index">Dashboard</a></li>
                    <li class="breadcrumb-item active">İlaçlar</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card card-warning card-outline">
            <div class="card-header">
                <h3 class="card-title">Katalog Listesi</h3>
                <div class="card-tools">
                    
                    <a href="/Medicine/Add" class="btn btn-warning btn-sm">
                        <i class="fas fa-plus"></i> Yeni İlaç Tanımla
                    </a>

                </div>
            </div>

            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>İlaç Adı</th>
                            <th>Etken Madde</th>
                            <th>Birim</th>
                            <th>Özellikler</th>
                            <th>Kritik Stok Sınırı</th>
                            <th style="width: 10%">İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="font-weight-bold">@item.Name</td>
                                <td>@item.ActiveIngredient</td>
                                <td><span class="badge badge-secondary">@item.Unit</span></td>
                                <td>
                                    <!-- Soğuk Zincir Kontrolü -->
                                    @if (item.RequiresColdChain == true)
                                    {
                                        <span class="badge badge-info"><i class="fas fa-snowflake"></i> Soğuk Zincir</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">-</span>
                                    }
                                </td>
                                <td>@item.CriticalStockLevel</td>
                                <td>
                                    <a href="#" class="btn btn-xs btn-outline-primary"><i class="fas fa-edit"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>