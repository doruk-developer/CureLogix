@{
    ViewData["Title"] = "Hızlı Stok Çıkış";
}

<div class="content-header"><div class="container-fluid"><h1>📟 Hızlı Stok Düşüm Terminali</h1></div></div>

<div class="row justify-content-center">
    <div class="col-md-6">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }

        <div class="card card-dark">
            <div class="card-header"><h3 class="card-title"><i class="fas fa-barcode"></i> Barkod Okuyucu</h3></div>
            <form method="post">
                <div class="card-body text-center">
                    <i class="fas fa-qrcode fa-5x mb-4 text-muted"></i>

                    <div class="form-group">
                        <label>QR Verisi (Okutulan Kod)</label>
                        <!-- Barkod okuyucular genelde enter'a basar, buraya odaklanacağız -->
                        <input type="text" name="qrData" class="form-control form-control-lg text-center" placeholder="Kodu okutunuz..." autofocus required>
                    </div>

                    <div class="form-group">
                        <label>Düşülecek Adet</label>
                        <input type="number" name="quantity" class="form-control text-center" value="1" min="1">
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-dark btn-block">Stoğu Düş</button>
                </div>
            </form>
        </div>
    </div>
</div>