@using CureLogix.Entity.Concrete
@model List<AuditLog>

@{
    ViewData["Title"] = "Denetim Günlüğü";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1><i class="fas fa-user-secret"></i> Sistem Denetim Günlüğü</h1>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card card-dark card-outline">
            <div class="card-header">
                <h3 class="card-title">Kullanıcı Hareketleri</h3>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap table-striped">
                    <thead>
                        <tr>
                            <th>Tarih / Saat</th>
                            <th>Kullanıcı</th>
                            <th>İşlem / Aktivite</th>
                            <th>IP Adresi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count > 0)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <!-- Yeni Property İsimleri -->
                                    <td style="width: 180px;">@item.Date.ToString("dd.MM.yyyy HH:mm:ss")</td>
                                    <td>
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-user mr-1"></i> @item.UserName
                                        </span>
                                    </td>
                                    <td>@item.Activity</td>
                                    <td><small class="text-muted">@item.IpAddress</small></td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted py-4">
                                    <i class="fas fa-history fa-2x mb-2"></i><br />
                                    Henüz kaydedilmiş bir işlem yok.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>