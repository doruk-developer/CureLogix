@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>CureLogix | Güvenli Giriş</title>

    <!-- OFFLINE CSS (Local) -->
    <!-- Sistem Fontu -->
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif !important;
        }
    </style>

    <!-- FontAwesome (Yerel) -->
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css">

    <!-- AdminLTE (Yerel) -->
    <link rel="stylesheet" href="~/theme/css/adminlte.min.css">
</head>
<body class="hold-transition login-page" style="background-color: #e9ecef;">

    <div class="login-box">
        <div class="login-logo">
            <a href="#"><b>Cure</b>Logix</a>
        </div>

        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <span class="h5">Sağlık Lojistik Yönetimi</span>
            </div>
            <div class="card-body login-card-body">
                <p class="login-box-msg">Oturum açmak için kimliğinizi doğrulayın</p>

                <form method="post">
                    <div class="input-group mb-3">
                        <input type="text" name="username" class="form-control" placeholder="Kullanıcı Adı" required>
                        <div class="input-group-append"><div class="input-group-text"><span class="fas fa-user"></span></div></div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="password" name="password" class="form-control" placeholder="Şifre" required>
                        <div class="input-group-append"><div class="input-group-text"><span class="fas fa-lock"></span></div></div>
                    </div>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger small p-2"><i class="fas fa-exclamation-circle"></i> @ViewBag.Error</div>
                    }

                    <div class="row">
                        <div class="col-12"><button type="submit" class="btn btn-primary btn-block">Giriş Yap</button></div>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center pt-1 pb-1">
                <small class="text-muted">CureLogix v1.0 &copy; @DateTime.Now.Year</small>
            </div>
        </div>
    </div>
</body>
</html>