@using CureLogix.Entity.DTOs.DoctorDTOs
@using CureLogix.Entity.Enums
@model List<DoctorListDto>
@using CureLogix.WebUI.Helpers

@{
    ViewData["Title"] = "Doktor Kadrosu";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6"><h1>👨‍⚕️ Sağlık Personeli Yönetimi</h1></div>

            <div class="col-sm-6 text-right">
                @if (User.IsInRole("Admin"))
                {
                    <a href="/Doctor/Add" class="btn btn-info"><i class="fas fa-user-plus"></i> Yeni Doktor Ekle</a>
                }
            </div>
        </div>
    </div>
</div>


<!--Tablo Bloğu-->
<section class="content">
    <div class="container-fluid">
        <div class="card card-info card-outline">
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap w-100">
                    <thead>
                        <tr>
                            <th>Ad Soyad</th>
                            <th>Branş</th>
                            <th>Hastane</th>
                            <th>Yetki / Rol</th>
                            @if (User.IsInRole("Admin"))
                            {
                                <th>İşlem</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count > 0)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@item.FullName</strong><br />
                                        <small class="text-muted text-uppercase">@item.Title</small>

                                        <!-- ✅ KVKK UYUMLU STANDART İLETİŞİM ALANI -->
                                        <div class="mt-1">
                                            @if (User.IsInRole("Admin"))
                                            {
                                                <!-- Admin: Tam E-posta -->
                                                <small class="text-dark" style="opacity: 0.75;">
                                                    <i class="fas fa-envelope mr-1"></i> @item.Email
                                                </small>
                                            }
                                            else
                                            {
                                                <!-- User: Maskelenmiş E-posta -->
                                                <small class="text-dark" style="opacity: 0.75;" title="Veri Gizliliği Koruması">
                                                    <i class="fas fa-envelope mr-1"></i> @CureLogix.WebUI.Helpers.PrivacyExtensions.MaskEmail(item.Email)
                                                </small>
                                            }
                                        </div>
                                    </td>
                                    <td>@item.Specialty</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.HospitalName))
                                        {
                                            <i class="fas fa-hospital text-muted mr-1"></i> 
                                            @item.HospitalName
                                        }
                                        else
                                        {
                                            <span class="text-muted italic">- Bağımsız -</span>
                                        }
                                    </td>
                                    <td>
                                        @{
                                            var role = (RoleTypeEnum)item.RoleType;
                                        }
                                        @if (role == RoleTypeEnum.KonseyUyesi)
                                        {
                                            <span class="badge bg-purple shadow-sm">⚖️ Konsey Üyesi</span>
                                        }
                                        else if (role == RoleTypeEnum.Bashekim)
                                        {

                                            <span class="badge badge-danger shadow-sm">👑 Başhekim</span>
                                        }
                                        else if (role == RoleTypeEnum.BakanlikYetkilisi)
                                        {

                                            <span class="badge badge-dark shadow-sm">🏛️ Bakanlık</span>
                                        }
                                        else
                                        {

                                            <span class="badge badge-success shadow-sm">🩺 Saha Doktoru</span>
                                        }
                                    </td>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <td>
                                            <div class="d-flex gap-2">
                                                <a href="/Doctor/Update/@item.Id" class="btn btn-sm btn-outline-info" title="Düzenle"><i class="fas fa-pencil-alt"></i> Düzenle</a>
                                                <a href="/Doctor/Delete/@item.Id" class="btn btn-sm btn-outline-danger" onclick="return confirm('Bu doktor kaydını silmek istediğinize emin misiniz?');" title="Sil"><i class="fas fa-trash"></i> Sil</a>
                                            </div>
                                        </td>
                                    }
                                </tr>
                            }
                        }
                        else
                        {
                            <!-- ✅ BOŞ DURUM (EMPTY STATE) - Burası müşteriyi etkileyecek kısım -->
                            <tr>
                                <td colspan="@(User.IsInRole("Admin") ? 5 : 4)" class="text-center py-5">
                                    <div class="p-4">
                                        <i class="fas fa-user-md fa-4x text-muted mb-3 opacity-25" style="filter: grayscale(1);"></i>
                                        <h5 class="text-muted font-weight-bold">Sistemde Kayıtlı Doktor Bulunamadı</h5>
                                        <p class="text-secondary small">Personel hiyerarşisini yönetmek ve yetkilendirme yapmak için lütfen doktor ekleyin.</p>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <a href="/Doctor/Add" class="btn btn-info btn-sm mt-2">
                                                <i class="fas fa-plus"></i> Hemen İlk Kaydı Oluştur
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>