@model CureLogix.WebUI.Models.DoctorAddViewModel

@{
    ViewData["Title"] = "Yeni Doktor Ekle";
}

<div class="content-header">
    <div class="container-fluid"><h1>👨‍⚕️ Personel Kaydı</h1></div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card card-info">
                    <div class="card-header"><h3 class="card-title">Kişisel Bilgiler</h3></div>

                    <form method="post">
                        <div class="card-body">

                            <div class="form-group">
                                <label>Ünvan</label>
                                <!-- Data.Title olarak erişiyoruz -->
                                <select class="form-control" asp-for="Data.Title">
                                    <option value="">Seçiniz...</option>
                                    <option value="Dr.">Dr.</option>
                                    <option value="Uzm. Dr.">Uzm. Dr.</option>
                                    <option value="Doç. Dr.">Doç. Dr.</option>
                                    <option value="Prof. Dr.">Prof. Dr.</option>
                                </select>
                                <span asp-validation-for="Data.Title" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label>Ad Soyad</label>
                                <input type="text" class="form-control" asp-for="Data.FullName" placeholder="Örn: Ahmet Yılmaz">
                                <span asp-validation-for="Data.FullName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label>Branş</label>
                                <input type="text" class="form-control" asp-for="Data.Specialty" placeholder="Örn: Kardiyoloji">
                                <span asp-validation-for="Data.Specialty" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label>Görevli Olduğu Hastane</label>
                                <!-- Listeyi Model.HospitalList'ten alıyoruz -->
                                <select asp-for="Data.HospitalId" asp-items="Model.HospitalList" class="form-control">
                                    <option value="">Bağımsız (Konsey Üyesi)</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Sistem Rolü (Yetki)</label>
                                <!-- Listeyi Model.RoleList'ten alıyoruz -->
                                <select asp-for="Data.RoleType" asp-items="Model.RoleList" class="form-control">
                                    <option value="">Rol Seçiniz...</option>
                                </select>
                                <span asp-validation-for="Data.RoleType" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label>E-Posta</label>
                                <input type="email" class="form-control" asp-for="Data.Email">
                            </div>

                        </div>
                        <div class="card-footer text-right">
                            <a href="/Doctor/Index" class="btn btn-secondary">Vazgeç</a>
                            <button type="submit" class="btn btn-info">Personeli Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>